{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true,
		"emitDeclarationOnly": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"sourceMap": true,
		"noEmit": true,
		"lib": ["ES2022", "DOM"]
	},
	"include": ["./src/**/*"],
	"exclude": ["node_modules", "dist"]
}
